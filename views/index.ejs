<!DOCTYPE html>
<html lang="en">

<head>
  <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0' />
  <title>Quiz App</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Mochiy+Pop+P+One&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/styles/footer.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <!-- Top nav bar (fixed) -->
  <%- include('partials/_navbar') %>
    <header class="container">
      <div class="headerPush"> </div>
      <p id="public-title">Public Quizzes</p>
      <div class="categories">
        <p class="filter">Filter By:</p>
        <a class="cat" href="/category/science">Science & Tech</a>
        <a class="cat" href="/category/pop-culture">Pop Culture</a>
        <a class="cat" href="/category/sports">Sports</a>
        <a class="cat" href="/category/geography">Geography</a>
      </div>
    </header>
    <main>

      <div class="public-quizzes">
        <div class="feature">
          <a href="/quiz/<%=featuredQuiz.id%>">
            <img class="main-test" src="<%= featuredQuiz.image_url %>" title="<%=featuredQuiz.name%>" alt="feature-quiz"></a>
          <div class="snapshot">
            <p>Your Latest Quiz: <%= result.name %></p>
            <p class="result">
              <%= result.score %> / <%= result.total_score %>
            </p>
            <br>
            <a id="result-link" href="/quizzes/<%=user.id%>">See All Results</a>
          </div>
        </div>
        <div class="all-quizzes">
          <% for (let quiz of quizzes) { %>
            <a href="/quiz/<%=quiz.id%>">
              <img class="quizzes" title="<%=quiz.name%>" src="<%= quiz.image_url %>" /></a>
            <% } %>
        </div>
      </div>
    </main>


</body>

<%- include('partials/_footer') %>

</html>
